# ARKLA Backend Environment Variables
# Copy this file to .env and fill in your values

# Gemini API Configuration
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_OCR_ENABLED=true
GEMINI_SUMMARIZATION_ENABLED=true
GEMINI_AUTO_FILL_ENABLED=true
GEMINI_KODE_MATCHING_ENABLED=false

# Cost Management
GEMINI_DAILY_COST_LIMIT=10.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
ENVIRONMENT=development

# Database
DATABASE_PATH=database/arkla.db

# CORS Origins (comma-separated, add your frontend URLs)
# For production: CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting (requests per window)
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60
